<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Personal_info"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@mipmap/background">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="216dp"
        android:layout_height="173dp"
        android:layout_gravity="center"
        android:layout_marginTop="18sp"
        android:src="@mipmap/profilepic"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an account"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="#9C9595"
        android:textStyle="bold"
        android:textSize="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tvInvalidFirstMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*First Name is Mandatory"
                android:textColor="@color/Red"
                android:gravity="bottom"
                android:textStyle="bold|italic"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/etfirst_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First name"
                android:drawableRight="@drawable/ic_account_box_black_24dp"
                android:drawableEnd="@drawable/ic_account_box_black_24dp"
                android:padding="11dp"
                android:textSize="15sp"
                android:textColor="#fff"
                android:layout_marginHorizontal="0dp"
                android:singleLine="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/loginbuttons"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <EditText
                android:id="@+id/etlast_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:drawableLeft="@drawable/ic_account_box_black_24dp"
                android:drawableRight="@drawable/ic_account_box_black_24dp"
                android:drawableEnd="@drawable/ic_account_box_black_24dp"
                android:hint="Last name"
                android:background="@drawable/loginbuttons"
                android:padding="11dp"
                android:textSize="15sp"
                android:textColor="#F7F9FD"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="4dp"
                android:singleLine="true"/>
        </RelativeLayout>
    </LinearLayout>

        <Spinner
            android:id="@+id/sGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/loginbuttons"
            android:textColor="@color/whiteText"
            android:padding="7dp"
            android:singleLine="true"
            android:textSize="15sp"
            android:entries="@array/Gender"
            />
            <TextView
                android:id="@+id/tvInvalidEmailMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*Email is invaild"
                android:textColor="@color/Red"
                android:gravity="bottom"
                android:textStyle="bold|italic"
                android:visibility="gone"
               />
            <EditText
                android:id="@+id/etemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/loginbuttons"
                android:textColor="#fff"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawableEnd="@drawable/ic_email_black_24dp"
                android:drawableRight="@drawable/ic_email_black_24dp"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:imeOptions="actionDone"
                android:padding="10dp"
                android:textSize="15sp"
                android:singleLine="true"/>
            <TextView
                android:id="@+id/tvPassEmptyMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*Password is Mandatory"
                android:textColor="@color/Red"
                android:gravity="bottom"
                android:textStyle="bold|italic"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/etPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:drawableRight="@drawable/ic_lock_black_24dp"
                android:drawableEnd="@drawable/ic_lock_black_24dp"
                android:layout_marginBottom="10dp"
                android:hint="Password"
                android:background="@drawable/loginbuttons"
                android:padding="10dp"
                android:textSize="15sp"
                android:singleLine="true"
                android:inputType="textPassword"
                android:imeOptions="actionDone"/>

            <TextView
                android:id="@+id/tvInvalidConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*Password Mismatch"
                android:textColor="@color/Red"
                android:gravity="bottom"
                android:textStyle="bold|italic"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/etconfirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:drawableRight="@drawable/ic_lock_black_24dp"
                android:drawableEnd="@drawable/ic_lock_black_24dp"
                android:hint="Confirm Password"
                android:background="@drawable/loginbuttons"
                android:padding="10dp"
                android:textSize="15sp"
                android:singleLine="true"
                android:inputType="textPassword"
                android:imeOptions="actionDone"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent">
                    <Button
                        android:id="@+id/bNext"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_alignParentBottom="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/signupbutton"
                        android:text="Next"
                        android:textAllCaps="false"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="#fff"
                        android:textSize="20sp" />
                </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

