<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Personal_info"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@mipmap/background">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="216dp"
        android:layout_height="173dp"
        android:layout_gravity="center"
        android:layout_marginTop="18sp"
        android:src="@mipmap/profilepic"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an account"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="#9C9595"
        android:textStyle="bold"
        android:textSize="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etfirst_name"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="First name"
            android:drawableRight="@drawable/ic_account_box_black_24dp"
            android:drawableEnd="@drawable/ic_account_box_black_24dp"
            android:padding="11dp"
            android:textSize="15sp"
            android:textColor="#F7F9FD"
            android:layout_marginHorizontal="0dp"
            android:layout_marginTop="30dp"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/loginbuttons"/>
        <EditText
            android:id="@+id/etlast_name"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_account_box_black_24dp"
            android:drawableRight="@drawable/ic_account_box_black_24dp"
            android:drawableEnd="@drawable/ic_account_box_black_24dp"
            android:hint="Last name"
            android:background="@drawable/loginbuttons"
            android:padding="11dp"
            android:textSize="15sp"
            android:textColor="#F7F9FD"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="4dp"
            android:singleLine="true"/>
    </LinearLayout>

    <Spinner
        android:id="@+id/sGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/loginbuttons"
        android:textColor="#F7F9FD"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawableEnd="@drawable/ic_person_black_24dp"
        android:drawableRight="@drawable/ic_person_black_24dp"
        android:padding="7dp"
        android:singleLine="true"
        android:textSize="15sp"
        android:entries="@array/Gender"/>
    <EditText
        android:id="@+id/etemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/loginbuttons"
        android:textColor="#F7F9FD"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:drawableEnd="@drawable/ic_email_black_24dp"
        android:drawableRight="@drawable/ic_email_black_24dp"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:imeOptions="actionDone"
        android:padding="10dp"
        android:textSize="15sp"
        android:singleLine="true"/>
    <EditText
        android:id="@+id/etPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#F7F9FD"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawableRight="@drawable/ic_lock_black_24dp"
        android:drawableEnd="@drawable/ic_lock_black_24dp"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:background="@drawable/loginbuttons"
        android:padding="10dp"
        android:textSize="15sp"
        android:singleLine="true"

        android:inputType="textPassword"
        android:imeOptions="actionDone"/>

    <EditText
        android:id="@+id/etconfirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#F7F9FD"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:drawableRight="@drawable/ic_lock_black_24dp"
        android:drawableEnd="@drawable/ic_lock_black_24dp"
        android:layout_marginTop="10dp"
        android:hint="Confirm Password"
        android:background="@drawable/loginbuttons"
        android:padding="10dp"
        android:textSize="15sp"
        android:singleLine="true"
        android:inputType="textPassword"
        android:imeOptions="actionDone"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
            <Button
                android:id="@+id/bNext"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:background="@drawable/signupbutton"
                android:text="Next"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#fff"
                android:textSize="20sp" />
        </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

