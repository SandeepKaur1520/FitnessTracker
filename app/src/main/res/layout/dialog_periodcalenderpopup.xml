<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/extralightPink">
    <TextView
        android:id="@+id/dialogPeriodHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/Pink"
        android:text="Enter Your Details"
        android:textAlignment="center"
        android:textColor="@color/whiteText"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:textStyle="bold|italic"
        android:fontFamily="cursive"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogPeriodHeader"
        android:padding="25dp">

        <TextView
            android:id="@+id/tvPeriodText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:fontFamily="cursive"
            android:text="Period"
            android:textSize="25dp" />

        <ToggleButton
            android:id="@+id/toggle_periodEnd"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"

            android:checked="false"
            android:gravity="right"
            android:textAlignment="center"
            android:textOff=" "
            android:textOn=" " />
        <ToggleButton
            android:id="@+id/toggle_periodStart"
            android:layout_toLeftOf="@+id/toggle_periodEnd"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:gravity="right"
            android:layout_marginRight="5dp"
            android:text="Start"
            android:textOn=" "
            android:textOff=" "
            android:textAlignment="center"
            android:layout_gravity="right"/>

    </RelativeLayout>



</RelativeLayout>