<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Selected_Field"
    android:orientation="vertical"
    android:background="@mipmap/background02">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How would you like to use this app for ?"
        android:textSize="30sp"
        android:textColor="#F7F9FC"
        android:padding="16sp"
        android:textAlignment="center"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="30dp"/>



        <Switch
        android:id="@+id/switch1Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Gym Trainer       "
        android:textSize="25sp"
        android:textColor="#F7F8FA"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="0dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_fitness_center_black02_24dp"/>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

    <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="Stay Fit "
            android:textColor="#F0F2F5"
            android:textSize="20sp" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight Loss"
            android:textSize="20sp"
            android:textColor="#F0F2F5"
            android:layout_marginTop="5sp"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight Gain "
            android:textSize="20sp"
            android:textColor="#F0F2F5"
            android:layout_marginTop="5sp"
            />
    </RadioGroup>
    <Switch
        android:id="@+id/switch2Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Period Tracker     "
        android:textSize="25sp"
        android:textColor="#F7F8FA"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_local_florist_black_24dp"/>


    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

    <RadioButton
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="Trying to Conceive "
            android:textColor="#F0F2F5"
            android:textSize="20sp" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:text="Regular Tracker"
            android:textColor="#F0F2F5"
            android:textSize="20sp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/BtnGym"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="gym trainer"
            android:textAllCaps="false"
            android:layout_marginLeft="70dp"/>

        <Button
            android:id="@+id/BtnPeriod"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Period tracker"
            android:textAllCaps="false"
            android:layout_marginLeft="50dp"/>
    </LinearLayout>



</LinearLayout>