<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background03">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Health Records"
        android:textColor="#0A0706"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:textSize="30sp"
        android:background="@drawable/gradient"
        android:padding="20dp"
        android:layout_marginTop="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lldailygoals">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daily goals"
            android:textSize="20sp"
            android:textColor="#F7F8FA"
            android:layout_marginTop="30dp"
            android:padding="20dp"
            android:background="#35A815"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/llSteps">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Steps"
            android:textSize="20sp"
            android:textColor="#F7F8FA"
            android:padding="20dp"
            android:background="#DF0A55"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/llCalories">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calories"
            android:textSize="20sp"
            android:textColor="#F7F8FA"
            android:padding="20dp"
            android:background="#3651E9"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/llWater">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Water"
            android:textSize="20sp"
            android:textColor="#F7F8FA"
            android:padding="20dp"
            android:background="#F84D16"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/llSleep">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sleep"
            android:textSize="20sp"
            android:textColor="#F7F8FA"
            android:padding="20dp"
            android:background="#A921C0"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/llFood">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food"
            android:textSize="20sp"
            android:textColor="#F7F8FA"
            android:padding="20dp"
            android:background="#E48308"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/llExercises">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exercises"
            android:textSize="20sp"
            android:textColor="#F7F8FA"
            android:padding="20dp"
            android:background="#F35289"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/llActivity">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activity"
            android:textSize="20sp"
            android:textColor="#F7F8FA"
            android:padding="20dp"
            android:background="#E63A03"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Making fitness a priority will energize you, make you look and feel better, and help diffuse stress."
        android:textColor="#D3094E"
        android:textSize="16sp"
        android:padding="5sp"/>

</LinearLayout>