<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background03">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Health Records"
        android:textColor="#fff"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:textSize="30sp"
        android:background="@drawable/gradient"
        android:padding="20dp"
        android:layout_marginTop="40dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:background="@drawable/dailygoals"
                    android:text="Daily goals"
                    android:gravity="top"
                    android:textColor="#F7F8FA"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:padding="15dp"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:text="Steps"
                    android:gravity="top"
                    android:textSize="20sp"
                    android:textColor="#F7F8FA"
                    android:background="@drawable/steps"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:padding="15dp"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:background="@drawable/calories"
                android:text="Calories"
                android:textColor="#F7F8FA"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:padding="15dp" />
            <TextView
                android:layout_width="60dp"
                android:layout_height="170dp"
                android:layout_weight="1"
                android:text="Water"
                android:textSize="20sp"
                android:textColor="#F7F8FA"
                android:background="@drawable/water"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:padding="15dp"/>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:background="@drawable/sleep"
                    android:text="Sleep"
                    android:textColor="#F7F8FA"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:padding="15dp"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:text="Food"
                    android:textSize="20sp"
                    android:textColor="#F7F8FA"
                    android:background="@drawable/food"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:padding="15dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:background="@drawable/exercises"
                    android:text="Exercises"
                    android:textColor="#F7F8FA"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:padding="15dp"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:text="Activity"
                    android:textSize="20sp"
                    android:textColor="#F7F8FA"
                    android:background="@drawable/activity"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:padding="15dp"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

