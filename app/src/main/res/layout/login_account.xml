<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_account"
    android:orientation="vertical"
    android:background="@mipmap/background">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="20dp"
                android:src="@mipmap/logo" />

            <EditText
                android:id="@+id/etEmailId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/loginbuttons"
                android:drawableEnd="@drawable/ic_account_box_black_24dp"
                android:drawableRight="@drawable/ic_lock_black_24dp"
                android:hint="Email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10sp"
                android:background="@drawable/loginbuttons"
                android:drawableEnd="@drawable/ic_lock_black_24dp"
                android:drawableRight="@drawable/ic_lock_black_24dp"
                android:hint="Password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textSize="16sp" />

            <Button
                android:id="@+id/bLoginToHealth"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/signupbutton"
                android:padding="10dp"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="#F9FAFC"
                android:textSize="20dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20sp"
                    android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Don't remember yet ?"
                            android:textAlignment="center"
                            android:textColor="#9198A0"
                            android:textSize="18sp" />
                        <Button
                            android:id="@+id/bSignupAgain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/signupbutton"
                            android:padding="10dp"
                            android:text="Sign Up "
                            android:layout_marginRight="40dp"
                            android:layout_marginLeft="40dp"
                            android:textAllCaps="false"
                            android:textColor="#F5FAFA"
                            android:textSize="20dp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

